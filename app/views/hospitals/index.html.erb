<%= render 'home/header' %>
<div class="hospitals">
    <h1 class="hospitals-head">病院一覧</h1>

    <p id="notice"><%= notice %></p>
   
    <table class="table-bordered table-condensed table-striped" >
      <thead class="">
        <tr>
          <th>名称</th>
          <th>詳細</th>
          <th>所在地</th>
          <th>緯度</th>
          <th>経度</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @hospitals.each do |hospital| %>
          <tr>
            <td><%= hospital.name %></td>
            <td><%= hospital.review %></td>
            <td><%= hospital.address %></td>
            <td><%= hospital.latitude %></td>
            <td><%= hospital.longitude %></td>
            <td><%= link_to '詳細', hospital %></td>
            <td><%= link_to '編集', edit_hospital_path(hospital) %></td>
            <td><%= link_to '削除', hospital, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
          </tr>
        <% end %>
        
      </tbody>
    </table>
    <br>
    <%= paginate @hospitals %>
    <br>
    <%= link_to 'New Hospital', new_hospital_path %>
</div>
<%= render 'home/footer' %>
